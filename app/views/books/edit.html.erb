<h1><strong>Editing Book</strong></h1>

<%= form_with(model: @book, url: book_path(@book.id), local: true, method: :patch) do |f| %>

  <h2>Title</h2>
  <%= f.text_field :title %>

  <h2>Body</h2>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path(@book.id) %>
